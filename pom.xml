<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>tfitter</artifactId>
    <groupId>la.scala</groupId>
    <version>0.1</version>
    <name>Twitter Crawler</name>
    <description>La Scala Twitter Crawler</description>
    <url>http://tfitter.com/</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <scala.version>2.8.0-SNAPSHOT</scala.version>
        <main.class>com.tfitter.Status</main.class>
    </properties>
    <repositories>
        <repository>
            <name>Scala-Tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
            <id>scala-tools.org</id>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <name>Scala-Tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
            <id>scala-tools.org</id>
        </pluginRepository>
        <pluginRepository>
            <name>twdata.org Maven 2 Repository</name>
            <url>http://twdata-m2-repository.googlecode.com/svn/</url>
            <id>twdata-m2-repository</id>
        </pluginRepository>
    </pluginRepositories>
    <dependencies>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>org.talkingpuffin</groupId>
            <artifactId>twitter-api</artifactId>
            <version>0.65</version>
        </dependency>
        <dependency>
            <groupId>com.twitter</groupId>
            <artifactId>scala-json</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>1.6</version>
        </dependency>
        <dependency>
            <groupId>la.scala.sql</groupId>
            <artifactId>rich</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>la.scala</groupId>
            <artifactId>util</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>
    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-scala-plugin</artifactId>
                <groupId>org.scala-tools</groupId>
            </plugin>
        </plugins>
    </reporting>
    <build>
        <sourceDirectory>src/main/scala</sourceDirectory>
        <filters>
            <filter>src/main/filters/filter.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/scala/la/scala/twitter/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-scala-plugin</artifactId>
                <version>2.11-SNAPSHOT</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <groupId>org.scala-tools</groupId>
                <configuration>
                    <args>
                        <arg>-deprecation</arg>
                        <arg>-unchecked</arg>
                        <arg>-optimise</arg>
                    </args>
                    <jvmArgs>
                        <jvmArg>-Xmx128m</jvmArg>
                        <jvmArg>-Xss2m</jvmArg>
                        <jvmArg>-Dfile.encoding=UTF-8</jvmArg>
                    </jvmArgs>
                    <excludes>
                        <exclude>**/drafts/*.*</exclude>
                    </excludes>
                    <launchers>
                        <launcher>
                            <mainClass>la.scala.twitter.Main</mainClass>
                            <id>go1</id>
                        </launcher>
                        <launcher>
                            <mainClass>com.tfitter.Status</mainClass>
                            <id>st1</id>
                        </launcher>
                    </launchers>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <configuration>
                    <excludes>
                        <exclude>**/drafts/*.scala</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-yamlpom-plugin</artifactId>
                <version>0.4.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>sync</goal>
                        </goals>
                    </execution>
                </executions>
                <groupId>org.twdata.maven</groupId>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-4</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>${main.class}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
